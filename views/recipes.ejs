<%- include('partials/header') %>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Recipe for some delicious food</h1>
        <p>View Our Delicious Food Recipes From All Over The World</p>
        <p>
          <a class="btn btn-primary btn-lg" href="/recipes/new">Add New Recipe</a>
        </p>
    </div>
  </header>
  <div class="row text-center" style="display: flex; flex-wrap: wrap;">
    <% recipes.forEach(function(recipe){ %>
      <div class="col-md-3 col-sm-6">
        <div class="thumbnail">
          <img src="<%= recipe.image %>">
            <div class="caption">
              <h5><%= recipe.name %></h5>
            </div>
        </div>
      </div>
    <% }); %>
  </div>
</div>

<%- include('partials/footer') %>